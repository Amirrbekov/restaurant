@model ShoppingCartViewModel

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-content bg_image_header jarallax">
        <div class="container">
            <h1 class="heading">Checkout</h1>
        </div>
    </div>
</div>


<div class="main-wrapper">
    <div class="shopping_cart">
        <div class="container">
            <div class="shipping_form">
                <div class="shipping_couponcart">
                    <div class="opencoupon">
                        <div class="text">Coupon Code</div>
                        <div class="button_group">
                            <a class="button" href="#">Click Here to Apply Coupon</a>
                        </div>
                    </div>
                    <form class="couponform" action="https://wpthemebooster.com/demo/themeforest/html/hungrybuzz/dark/coupon.php" method="POST">
                        <div class="form-group">
                            <label for="coupon">It you have a coupon code, please apply it below</label>
                            <input type="text" class="form-control" id="coupon" name="coupon" placeholder="Coupon Code">
                        </div>
                        <div class="button_group">
                            <input class="button" type="submit" value="Apply Coupon" name="submit">
                        </div>
                    </form>
                </div>
                <form method="POST">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="label_shipping">
                                <h3>Billing Details</h3>
                            </div>
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input asp-for="OrderHeader.Name" type="text" class="form-control" />
                                <span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="street">Street Address*</label>
                                <input asp-for="OrderHeader.StreetAddress" type="text" class="form-control" placeholder="House No & Street Name" />
                                <span asp-validation-for="OrderHeader.StreetAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="city">Town / City*</label>
                                <input asp-for="OrderHeader.City" type="text" class="form-control" placeholder="City" />
                                <span asp-validation-for="OrderHeader.City" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="phone">Phone*</label>
                                <input asp-for="OrderHeader.PhoneNumber" type="text" class="form-control" placeholder="012345" />
                                <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-7">
                            <div class="checkout_cart_total">
                                <h3 class="grand_title">Cart Total</h3>
                                <ul>
                                    @foreach (var item in Model.ShoppingCartList)
                                    {
                                        <li><span class="cost_per">@item.Product.Name</span> Quantity: @item.Count <span class="value">@((item.Product.Price * @item.Count).ToString("c"))</span></li>

                                    }
                                    <li class="totalvalue"><span class="cost_per">Total</span> <span class="value">@Model.OrderHeader.OrderTotal.ToString("c")</span></li>
                                </ul>
                            </div>

                            <div class="button_group">
                                <button class="button" type="submit" value="Place Order">Place Order</button>
                            </div>
                        </div>
                    </div>
                </form>
				<div class="card-footer">
					<div class="row">
						<div class="col-12 col-md-8 pt-2">
							<p style="color:maroon; font-size:14px;">
								Estimate Arrival Date:
								@DateTime.Now.ToShortDateString() - @DateTime.Now.AddDays(1).ToShortDateString()
							</p>
						</div>
					</div>
				</div>
            </div>
        </div>
    </div>
</div>