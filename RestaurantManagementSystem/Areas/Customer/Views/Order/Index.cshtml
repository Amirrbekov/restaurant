﻿@{
    var status = Context.Request.Query["status"];
    var pending = "";
    var inprocess = "";
    var completed = "";
    var approved = "";
    var all = "";

    switch (status)
    {
        case "pending":
            pending = "active text-dark";
            break;
        case "inprocess":
            inprocess = "active text-dark";
            break;
        case "completed":
            completed = "active text-dark";
            break;
        case "approved":
            approved = "active text-dark";
            break;
        default:
            all = "active text-dark";
            break;
    }
}


@*DataTables.net*@
<link rel="stylesheet" href="//cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" asp-append-version="true" />

<h1 class="text-center">Order List</h1>

<div class="border-0 mt-4">
    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12">
                <div class="d-flex justify-content-between pb-5 pt-2">
                    <span></span>
                    <ul class="list-group list-group-horizontal-sm">
                        <a class="button" style="text-decoration:none" asp-controller="Order" asp-action="Index" asp-route-status="inprocess">
                            <li class=" @inprocess">In Process</li>
                        </a>
                        <a class="button" style="text-decoration:none" asp-controller="Order" asp-action="Index" asp-route-status="pending">
                            <li class=" @pending">Payment Pending</li>
                        </a>
                        <a class="button" style="text-decoration:none" asp-controller="Order" asp-action="Index" asp-route-status="completed">
                            <li class=" @completed">Completed</li>
                        </a>
                        <a class="button" style="text-decoration:none" asp-controller="Order" asp-action="Index" asp-route-status="approved">
                            <li class=" @approved">Approved</li>
                        </a>
                        <a class="button" style="text-decoration:none" asp-controller="Order" asp-action="Index" asp-route-status="all">
                            <li class=" @all">All</li>
                        </a>
                    </ul>
                </div>
                <table id="tblData" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Phone Number
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Total
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @*DataTables.net*@
    <script src="//cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/js/ordercustomer.js"></script>
}