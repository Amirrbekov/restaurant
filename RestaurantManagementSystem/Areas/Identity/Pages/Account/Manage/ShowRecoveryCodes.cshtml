@page
@model ShowRecoveryCodesModel
@{
    ViewData["ActivePage"] = "TwoFactorAuthentication";
}

<div class="border-0 mt-4 text-center">
    <div class="card-header m-lg-0 py-4">
        <div class="row">
            <div class="col-12">
                <h2 class="py-2 text-white text-center">Recovery codes</h2>
                <partial name="_StatusMessage" for="StatusMessage" />
            </div>
        </div>
    </div>
    <div class="p-4 ">
        <div class="row">
            <div class="alert alert-warning" role="alert">
                <p>
                    <strong>Put these codes in a safe place.</strong>
                </p>
                <p>
                    If you lose your device and don't have the recovery codes you will lose access to your account.
                </p>
            </div>
            <div class="col-md-12">
                @for (var row = 0; row < Model.RecoveryCodes.Length; row += 2)
                {
                    <code class="recovery-code">@Model.RecoveryCodes[row]</code>

                    <text>&nbsp;</text>

                    <code class="recovery-code">@Model.RecoveryCodes[row + 1]</code>

                    <br />
                }
            </div>
        </div>
    </div>
</div>
