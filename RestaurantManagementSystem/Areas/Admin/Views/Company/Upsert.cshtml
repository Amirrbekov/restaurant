@model Company

<div class="container-fluid">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-2">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">@(Model.CompanyId != 0 ? "Update" : "Create") Company</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="user" enctype="multipart/form-data">
                <input asp-for="CompanyId" hidden />
                <div class="row">
                    <div class="col-10">
                        <div class="border p-3 mt-4">
                            @*<div asp-validation-summary="All"></div>*@
                            <div class="form-group col-12">
                                <input asp-for="Name" class="form-control" />
                                <label asp-for="Name" class="ms-2"></label>
                                <span asp-validation-for="Name" class="text-bg-danger"></span>
                            </div>
                            <div class="form-group col-12">
                                <input asp-for="PhoneNumber" class="form-control" />
                                <label asp-for="PhoneNumber" class="ms-2"></label>
                                <span asp-validation-for="PhoneNumber" class="text-bg-danger"></span>
                            </div>
                            <div class="form-group col-12">
                                <input asp-for="StreetAddress" class="form-control" />
                                <label asp-for="StreetAddress" class="ms-2"></label>
                                <span asp-validation-for="StreetAddress" class="text-bg-danger"></span>
                            </div>
                            <div class="form-group col-12">
                                <input asp-for="City" class="form-control" />
                                <label asp-for="City" class="ms-2"></label>
                                <span asp-validation-for="City" class="text-bg-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-6 col-md-3">
                                    <button type="submit" class="btn btn-primary form-control">@(Model.CompanyId != 0 ? "Update" : "Create")</button>
                                </div>
                                <div class="col-6 col-md-3">
                                    <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border form-control">
                                        Back To List
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}