@model List<RestaurantsGroup>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Category List</h1>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6 text-end">
                <a asp-controller="Restaurant" asp-action="Create" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg> Add New Restaurant Group
                </a>
            </div>
        </div>
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Restaurant Name</th>
                    <th>Phone Number</th>
                    <th>City</th>
                    <th>Country</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Restaurant Name</th>
                    <th>Phone Number</th>
                    <th>City</th>
                    <th>Country</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model.OrderBy(u => u.Id))
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.PhoneNumber
                        </td>
                        <td>
                            @item.City
                        </td>
                        <td>
                            @item.Country
                        </td>
                        <td class="col-4">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Restaurant" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary mx-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                    </svg> Edit
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>
<!-- /.container-fluid -->