@using Models.Comment;
@model Contact
<div class="container-fluid">
    <div class="card shadow border-0 mt-4">
        <div class="card-body p-4">
            <form method="post" class="user">
                <div class="border p-3 mt-4">
                    <div class="form-group col-12">
                        <input asp-for="Id" readonly class="form-control" />
                        <label asp-for="Id" class="ms-2"></label>
                    </div>
                    <div class="form-group col-12">
                        <input asp-for="Name" readonly class="form-control" />
                        <label asp-for="Name" class="ms-2"></label>
                    </div>
                    <div class="form-group col-12">
                        <input asp-for="Email" readonly class="form-control" />
                        <label asp-for="Email" class="ms-2"></label>
                    </div>
                    <div class="form-group col-12">
                        <textarea asp-for="Message" readonly class="form-control" ></textarea>
                        <label asp-for="Message" class="ms-2"></label>
                    </div>
                    <div class="row">
                        <div class="col-6 col-md-3">
                            <a asp-controller="Contact" asp-action="Index" class="btn btn-outline-primary border form-control">
                                Back To List
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>