@using Models.Comment;
@model Contact

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Message</h2>
            </div>
        </div>
    </div>
    <div class="card-body p4">
        <form method="post" class="user">
            <div class="border p-3 mt-4">
                <div class="form-group col-12">
                    <input asp-for="Id" disabled class="form-control" />
                    <label asp-for="Id" class="ms-2"></label>
                </div>
                <div class="form-group col-12">
                    <input asp-for="Name" disabled class="form-control" />
                    <label asp-for="Name" class="ms-2"></label>
                </div>
                <div class="form-group col-12">
                    <input asp-for="Email" disabled class="form-control" />
                    <label asp-for="Email" class="ms-2"></label>
                </div>
                <div class="form-group col-12">
                    <textarea asp-for="Message" disabled class="form-control" ></textarea>
                    <label asp-for="Message" class="ms-2"></label>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Contact" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>